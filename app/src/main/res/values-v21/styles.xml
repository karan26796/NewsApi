<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="text_color_primary">@color/head_light</item>
        <item name="text_color_secondary">@color/subhead_light</item>
        <item name="text_color_tertiary">@color/detail_light</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/md_indigo_A400</item>
        <item name="colorPrimary">@color/md_grey_100</item>
        <item name="android:typeface">serif</item>
        <item name="android:colorControlHighlight">@color/md_blue_300</item>
        <item name="icon_color">@color/md_grey_700</item>
        <item name="bottom_nav_color">@color/md_grey_100</item>
    </style>

    <style name="AppDarkTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
        <item name="android:typeface">serif</item>
        <item name="text_color_primary">@color/head_dark</item>
        <item name="text_color_secondary">@color/subhead_dark</item>
        <item name="text_color_tertiary">@color/detail_dark</item>
        <item name="android:colorControlHighlight">@color/md_grey_400</item>
        <item name="colorAccent">@color/md_amber_A400</item>
        <item name="icon_color">@color/md_grey_300</item>
        <item name="bottom_nav_color">@color/md_grey_800</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:layout_margin">@dimen/margin_small</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewHead">
        <item name="android:textColor">?attr/text_color_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
    </style>

    <style name="TextViewSubHead">
        <item name="android:textColor">?attr/text_color_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:drawablePadding">@dimen/padding_smallest</item>
        <item name="android:maxLength">15</item>
        <item name="android:paddingTop">@dimen/padding_smallest</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
    </style>

    <style name="TextViewDetail">
        <item name="android:textColor">?attr/text_color_tertiary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingEnd">@dimen/padding_small</item>
        <item name="android:paddingStart">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_smallest</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:checked">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">?attr/text_color_primary</item>
    </style>
</resources>
