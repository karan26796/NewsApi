<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlSymmetry,ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="@dimen/padding_small">

        <com.example.karan.myapplication2.utils.SquareImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@android:id/progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_news_headline"
            style="@style/TextViewHead"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="@null" />

        <TextView
            android:id="@+id/text_news_date"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_news_headline"
            android:maxLength="@null" />

        <TextView
            android:id="@+id/text_news_detail"
            style="@style/TextViewDetail"
            android:layout_below="@id/text_news_date"
            android:maxLines="2"
            android:visibility="gone" />

        <!--<TextView
            android:id="@+id/text_news_source"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_news_detail"
            android:drawableStart="@drawable/ic_dot_source" />-->

        <TextView
            android:id="@+id/text_news_author"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_alignStart="@id/text_news_detail"
            android:layout_below="@id/text_news_detail"
            android:maxLength="@null" />

        <ImageButton
            android:id="@+id/bookmark_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/text_news_detail"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/padding_smaller"
            app:srcCompat="@drawable/ic_bookmark" />
    </RelativeLayout>
</LinearLayout>