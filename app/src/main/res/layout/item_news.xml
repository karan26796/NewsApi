<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="10"
    tools:ignore="HardcodedText,RtlSymmetry,ContentDescription">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2.5"
        android:padding="@dimen/padding_smaller">

        <com.example.karan.myapplication2.utils.SquareImageView
            android:id="@+id/image_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@android:id/progress"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7.5">

        <TextView
            android:id="@+id/text_news_headline"
            style="@style/TextViewHead"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:maxLines="@null" />

        <TextView
            android:id="@+id/text_news_date"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/text_news_headline" />

        <TextView
            android:id="@+id/text_news_detail"
            style="@style/TextViewDetail"
            android:layout_below="@id/text_news_date"
            android:maxLines="2" />

        <TextView
            android:id="@+id/text_news_source"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_news_detail"
            android:drawableStart="@drawable/ic_dot_source" />

        <TextView
            android:id="@+id/text_news_author"
            style="@style/TextViewSubHead"
            android:layout_width="wrap_content"
            android:layout_below="@id/text_news_detail"
            android:layout_toEndOf="@id/text_news_source"
            android:drawableStart="@drawable/ic_dot_author"
            android:paddingStart="@dimen/padding_smallest" />

    </RelativeLayout>
</LinearLayout>